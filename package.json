    "delaunator": "^5.0.1",
    "jstransformer-markdown-it": "^3.0.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.11.4",
    "plausible-tracker": "^0.3.9",
    "postcss": "^8.5.3",
    "postcss-media-minmax": "^5.0.0",
    "postcss-mixins": "^11.0.3",
    "postcss-nesting": "^13.0.1",
    "postcss-opacity-percentage": "^3.0.0",
    "three": "~0.174.0",
    "vite": "^6.2.2",
    "vite-plugin-pug-transformer": "^1.0.7"
