    "@types/culori": "^2.1.0",
    "@types/delaunator": "^5.0.2",
    "@types/three": "^0.163.0",
    "eslint": "^8.57.0",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.1.2",
    "stylelint": "^16.3.1",
    "svgo": "^3.2.0",
    "typescript": "^5.4.3"
  },
  "pnpm": {
    "overrides": {
      "markdown-it@<12.3.2": ">=12.3.2",
      "protobufjs@<6.11.3": ">=6.11.3",
      "got@<11.8.5": ">=11.8.5"
    }
  }
