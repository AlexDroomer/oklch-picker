    "@types/node": "^22.13.10",
    "@types/three": "^0.174.0",
    "better-node-test": "^0.7.1",
    "eslint": "^9.22.0",
    "happy-dom": "^17.4.4",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.2.0",
    "stylelint": "^16.16.0",
    "svgo": "^3.3.2",
    "typescript": "^5.8.2"
  },
  "pnpm": {
    "overrides": {
      "markdown-it@<12.3.2": ">=12.3.2",
      "protobufjs@<6.11.3": ">=6.11.3",
