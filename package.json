{
  "name": "oklch-picker",
  "private": true,
  "homepage": "https://oklch.com/",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build -m production",
    "clean": "rm -Rf ./dist/",
    "build:lch": "LCH=1 vite build -m production && ./lch.sh",
    "test:types": "tsc --noEmit",
